<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="72dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp">

        <ImageView
            android:id="@+id/image_place_type_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/text_place_name"
            android:layout_width="165dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/image_place_type_icon"
            android:layout_toEndOf="@id/image_place_type_icon"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/holo_blue_bright"/>

        <TextView
            android:id="@+id/text_place_number"
            android:layout_width="165dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/image_place_type_icon"
            android:layout_toEndOf="@id/image_place_type_icon"
            android:layout_below="@+id/text_place_name"
            android:textColor="@android:color/holo_green_dark"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>